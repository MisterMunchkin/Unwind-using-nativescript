<Page class="page-content" loaded="onloaded"
        xmlns:UI="nativescript-reviews">
    <GridLayout rows="*, 60">
        <ScrollView>    
            <StackLayout row="0">
                <UI:Reviews user="userTap" long="longpressed" reviews="{{ reviews }}" />
            </StackLayout>
        </ScrollView>

        <StackLayout row="1" orientation="horizontal">
            <TextField class="input" hint="write your own review here" id="userReview" />
            <Button text="done" />
        </StackLayout>
    </GridLayout>
</Page>