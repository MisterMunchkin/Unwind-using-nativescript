    <!--<Label class="page-icon fa" text="&#xf1ea;"></Label>
    <Label class="page-placeholder" text=""></Label>-->

<Page class="page-white" xmlns="http://schemas.nativescript.org/tns.xsd" 
         loaded="onLoaded">

        <Page.actionBar>
            <ActionBar class="label page-blue" title="Add Booking">
               <!-- <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap" />-->
            </ActionBar>
        </Page.actionBar>

        <StackLayout orientation="vertical" class="inputForm">
            <!--<Label text="enter check In"/>
            <DatePicker id="checkin" hint="check in" day="15" month="5" year="2015" verticalAlignment="center" 
            horizontalAlignment="center" />-->
            <Label text="Enter Check in Check out Info" class="label-blue pageLabel" />
            
            <Label text="Check In Date" class="label-blue" />
            <TextField class="input-blue" autocorrect="false" id="checkinDate"
                tap="checkinTap" ></TextField>
            <!--<Label text="enter check Out"/>
            <DatePicker id="checkout" hint="check out" day="15" month="5" year="2015" verticalAlignment="center" 
            horizontalAlignment="center" />-->
            <Label text="Check Out Date" class="label-blue" />
            <TextField class="input-blue" autocorrect="false" id="checkoutDate"
                tap="checkoutTap" ></TextField>

            <button class="blue-btn" text="next" tap="nextTap"/>
        
        </StackLayout>
        
</Page>
