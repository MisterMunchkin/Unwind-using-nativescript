<Page class="page-content" loaded="onloaded"
    xmlns:lv="nativescript-pro-ui/listview">
    <Page.actionBar>
        <ActionBar class="label page-blue" title="Add Inquiries">
            <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap" />
        </ActionBar>
    </Page.actionBar>
    <StackLayout orientation="vertical">

        <!--<TextField id="textReview" hint="Write your review for the hotel" /> -->
        <TextView id="textInquiry" style="margin-top: 15px" borderColor="#DEDEDE" borderWidth="1"
            height="300px" autocorrect="true" autocapitalization="true" hint="What questions do you have about the hotel?"  class="input input-border"></TextView>
        <Button text="submit inquiries" tap="submit" class="blue-btn" />
    </StackLayout>
</Page>