<Page class="page" loaded="onLoaded" xmlns:dd="nativescript-drop-down">

    <Page.actionBar>
        <ActionBar class="label page" title="Email">
            <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap" />
        </ActionBar>
    </Page.actionBar>

    <StackLayout class="inputForm" orientation="vertical">
        
        <Label class="label pageLabel" text="Enter Email" />
        <Label class="EnterValidEmail" text="Enter valid email" visibility="{{ ValidEmail }}" />
        <TextField class="input" keyboardType="email" id="email" autocorrect="false" autocapitalizationType="none" />

        <Button class="blue-btn" text="submit" tap="nextTap"/>
        <!--<Button class="w-outline-btn" text="already have an account?" tap="signin"/>-->
    </StackLayout>

</Page>