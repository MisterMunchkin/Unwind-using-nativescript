<Page class="page-content" loaded="onloaded">
    <Page.actionBar>
        <ActionBar class="label page-blue" title="Menu">
            <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap" />
        </ActionBar>
    </Page.actionBar>
    <StackLayout orientation="vertical">
        <Label class="page-icon fa" text="&#xf1ea;"></Label>
        <Label class="page-placeholder" text="image here"></Label>

        <Label  id="foodName" text="{{ name }}"></Label>

        <TextField autocorrect="false" fontFamily="FontAwesome" 
                hint="food quantity" id="foodQty"
                keyboardType="number" maxLength="2"></TextField>
        <TextView autocorrect="true" hint="comments for your food" 
                    id="remarks" fondFamily="FontAwesome" />

        <Button text="ADD TO CART" id="addToCart" tap="addToCartTap" />
    </StackLayout>
</Page>