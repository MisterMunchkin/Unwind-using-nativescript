<Page class="page-content" loaded="onloaded" 
            xmlns:lv="nativescript-pro-ui/listview" >
    <!--<Label class="page-icon fa" text="&#xf1ea;"></Label>
    <Label class="page-placeholder" text="bills"></Label>-->

     <Page.actionBar>
        <ActionBar class="label page-blue" title="Category">
            <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap" />
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*, 60">

        <StackLayout orientation="vertical">
            <Label text="Rooms" />
            <lv:RadListView id="roomlistview" items="{{ roomItems }}"  class="list-group"
            row="0" > 

                <lv:RadListView.listViewLayout>
                    <lv:ListViewLinearLayout scrollDirection="Vertical"/>
                </lv:RadListView.listViewLayout>

                <lv:RadListView.itemTemplate>
                    <GridLayout class="list-group-item" rows="auto" columns="auto, *">
                        <!-- <Image row="0" col="0" src="{{ itemImage }}" class="thumb img-rounded" />-->
                        <StackLayout row="0" col="1" >

                            <Label text="{{ roomNumber }}" class="list-group-item-heading" />

                            <Label text="{{ roomName }}" class="list-group-item-text" />
                            
                            <Label text="{{ roomDescription }}" class="list-group-item-text" />
                            
                            <Label text="{{ roomPrice }}" class="list-group-item-text" />

                            
                        </StackLayout>
                    </GridLayout> 
                </lv:RadListView.itemTemplate>
            </lv:RadListView>
        </StackLayout>

        <StackLayout row="1" orientation="horizontal">
            <Label class="label-blue label-big" text= "Grand Total: " />
            <Label id="grandTotal" class=" label-blue label-big" />
        </StackLayout>
    
    </GridLayout>
</Page>