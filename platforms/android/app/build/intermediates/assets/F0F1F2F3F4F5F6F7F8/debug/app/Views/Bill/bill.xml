<Page class="page-content" loaded="onloaded" xmlns:accordion="nativescript-accordion">
    <!--<Label class="page-icon fa" text="&#xf1ea;"></Label>
    <Label class="page-placeholder" text="bills"></Label>-->

    <accordion:Accordion items="{{ items }}" itemTapped="tapped" headerTextBold="true" 
    headerTextColor="black" headerColor="white" allowMultiple="true" id="ac" selectedIndex="1" >
        <accordion:Accordion.headerTemplate>
            <GridLayout columns="auto, *">
                <Label text="{{ title }}" />
                <Label col="1" text="+" />
            </GridLayout>
        </accordion:Accordion.headerTemplate>

        <accordion:Accordion.itemTemplate>
            <StackLayout headerText="First">
                <Label text="{{ text }}" />
            </StackLayout>
        </accordion:Accordion.itemTemplate>

        <accordion:Accordion.footerTemplate>
            <GridLayout columns="auto, *">
                <Label text="{{ footer }}" />
                <Label col="1" text="-" />
            </GridLayout>
        </accordion:Accordion.footerTemplate>
    </accordion:Accordion>
</Page>