<!--
This is the component view that represents the 'Home' tab.
Feel free to customize layouts and components to change how the tab view looks.
-->
<GridLayout class="page-content">
    <Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:lv="nativescript-pro-ui/listview" loaded="onLoaded">


        <lv:RadListView id="listview"  itemTap="onItemTap" selectionBehavior="Press" items="{{ items }}" class="list-group"> 
            <lv:RadListView.listViewLayout>
                <lv:ListViewGridLayout scrollDirection="Vertical"  spanCount="2" />
            </lv:RadListView.listViewLayout>

            <lv:RadListView.itemTemplate>
                <GridLayout class="list-group-item" rows="auto" columns="auto, *">
                    <Image row="0" col="0" src="{{ itemImage }}" class="thumb img-rounded" />
                    <StackLayout row="0" col="1">
                        <Label text="{{ pageName }}" class="list-group-item-heading" />
                        <Label text="{{ pageDesc }}" textWrap="true" class="list-group-item-text" />
                    </StackLayout>
                </GridLayout>
            </lv:RadListView.itemTemplate>

        </lv:RadListView>

    </Page>
</GridLayout>