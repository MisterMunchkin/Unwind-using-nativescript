<!--
This is the component view that represents the 'Browse' tab.
Feel free to customize layouts and components to change how the tab view looks.
-->
<GridLayout class="page-content" xmlns:FAB="nativescript-floatingactionbutton">

    <Page xmlns="http://schemas.nativescript.org/tns.xsd" 
            xmlns:lv="nativescript-pro-ui/listview" 
             loaded="onLoaded" unloaded="unLoaded">

        <GridLayout rows="*, 60">
            <StackLayout row="0">
                <lv:RadListView id="listview" items="{{ items }}" itemTap="onItemTap" class="list-group"
                    pullToRefresh="true" pullToRefreshInitiated="pullToRefreshInit" > 

                    <lv:RadListView.listViewLayout>
                        <lv:ListViewLinearLayout scrollDirection="Vertical"/>
                    </lv:RadListView.listViewLayout>

                    <lv:RadListView.itemTemplate>
                        <GridLayout class="list-group-item" rows="auto" columns="auto, *">
                        <!-- <Image row="0" col="0" src="{{ itemImage }}" class="thumb img-rounded" />-->
                            <StackLayout row="0" col="1" >
                                <Label text="{{ reservationDate }}" class="list-group-item-heading" />
                                <Label text="{{ checkinDate }}" class="list-group-item-text" />
                                <Label text="{{ checkoutDate }}" class="list-group-item-text" />
                                <Label text="{{ reservationStatus }}" class="list-group-item-text" />
                                <Label text="{{ reservationID }}" class="list-group-item-text" />
                                <Label text="{{ adult_qty }}" class="list-group-item-text" />
                                <Label text="{{ child_qty }}" class="list-group-item-text" />
                            </StackLayout>
                        </GridLayout> 
                    </lv:RadListView.itemTemplate>     
                </lv:RadListView>
            </StackLayout>
            
            <StackLayout row="1" orientation="horizontal">
                <!--<Label textWrap="true"  id="resNavLabel" tap="reservationNav" width="35%" >
                  <FormattedString>
                        <Span text="&#xf015;" fontFamily="FontAwesome"></Span>
                        <Span class="inActiveNav" text="Reservations"></Span>
                    </FormattedString>
                </Label>
                <Label textWrap="true" id="reqNavLabel" tap="requestNav" width="35%"  >
                  <FormattedString>
                        <Span text="&#xf015;" fontFamily="FontAwesome"></Span>
                        <Span class="ActiveNav" text="Request"></Span>
                    </FormattedString>
                </Label>-->
                <Button class="ActiveNav" text="Reservations" id="resNavLabel" tap="reservationNav" width="35%" />
  
                <Button class="inActiveNav" text="Request" id="reqNavLabel" tap="requestNav" width="35%"  />
 
            </StackLayout> <!--just reuse the labels you already have, you just need to change some variables so it could be used for both reservation and request -->
        </GridLayout>
    </Page>
    <FAB:fab tap="fabTap"
                row="1"         
                icon="res://ic_plus_white_48dp"
                class="fab-button" />
</GridLayout>