<Page class="page" loaded="loaded" xmlns:dd="nativescript-drop-down">
    <Page.actionBar>
        <ActionBar class="page" title="Register">
            <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap" />
        </ActionBar>
    </Page.actionBar>

    <StackLayout orientation="vertical" class="inputForm" >
        <Label text="Enter Name Information" class="label pageLabel" />
        <WrapLayout>
            <Label text="enter first name, last name, and middle initial" style="color: red" visibility="{{ requiredNotif }}" />
        </WrapLayout>
        <Label text="First Name" class="label" />
        <TextField class="input" id="fname" />
        
        <Label text="Last Name" class="label" />
        <TextField class="input" id="lname" />
        
        <Label text="Middle Initial" class="label" />
        <TextField class="input" id="MI" />

        <Button class="blue-btn" text="next" tap="nextTap"/>
        <!--<Button class="w-outline-btn" text="already have an account?" tap="signin"/>-->
    </StackLayout>

</Page>