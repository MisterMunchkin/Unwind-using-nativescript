<Page class="page" loaded="loaded">

    <Page.actionBar>
        <ActionBar class="label page" title="Login">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="inputForm" orientation="vertical">
        <Image class="logo"  src="res://logo_transparent_background" />

        <Label text="Email Address" class="label" />
        <TextField class="input" keyboardType="email" 
        id="email" autocorrect="false" autocapitalizationType="none"  />
        
        <Label text="Password" class="label" />
        <TextField class="input" id="password" secure="true"  />

        <Button class="blue-btn" text="Sign in" tap="signIn"/>
        <Button class="w-outline-btn" text="don't have an account?" tap="register"/>
    </StackLayout>

</Page>