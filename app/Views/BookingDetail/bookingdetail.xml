<Page class="page-content" loaded="onloaded">
    <Page.actionBar>
        <ActionBar class="label page-blue" title="Booking Detail">
           
        </ActionBar>
    </Page.actionBar>

    <StackLayout orientation="vertical">
        <Label class="page-icon fa" text="&#xf1ea;"></Label>
        <Label class="page-placeholder" text="{{ message }}"></Label>

        <Label  id="resDateLabel"></Label>
        <Button text="{{ cancelText }}" id="cancelBookingID" tap="cancelUncancelTap" visibility="{{ cancelVisible }}" />
        <Button text="Check In" tap="checkinButton" id="checkinButtonID" visibility="{{ checkinVisible }}" />
        <Button tap="checkoutButton" text="Check Out" tap="checkoutTap" visibility="{{ checkoutVisible }}"/>
    </StackLayout>
</Page>