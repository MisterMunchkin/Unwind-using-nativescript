<Page class="page-content" loaded="onloaded"
  
         xmlns:lv="nativescript-pro-ui/listview">
    <Page.actionBar>
        <ActionBar id="actionBar" class="label page-blue" title="">
            <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap" />
        </ActionBar>
    </Page.actionBar>

    <GridLayout rows="*, 60">
        <StackLayout orientation="vertical">

            <lv:RadListView id="listview" items="{{ items }}"  
            row="0" itemSelected="itemSelected" itemDeselected="itemDeselected" multipleSelection="true" selectionBehavior="Press" > 

                <lv:RadListView.listViewLayout>
                    <lv:ListViewGridLayout scrollDirection="Vertical" itemHeight="250" spanCount="2" />
                </lv:RadListView.listViewLayout>

                <lv:RadListView.itemTemplate>
                    <GridLayout class="list-group-item listStyle" rows="130, auto" >
                        <Image row="0"  src="{{ itemImage }}" stretch="aspectFit" /> 
                        <StackLayout row="1"  >

                            <Label text="{{'Room Number: ' + roomNumber }}" class="antique-white-layout roomNumber" />
                            <Label text="{{'Room Type: ' + roomType }}" class="antique-white-layout roomType" />
                            
                            
                        </StackLayout>
                    </GridLayout> 
                </lv:RadListView.itemTemplate>
            </lv:RadListView>
        </StackLayout>
        

        <Button row="1" class="blue-btn" text="Submit requests"  id="addToCart" tap="addToCartTap" />
    </GridLayout>
</Page>